<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/char_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/char_item_equip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cinv_equip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/char_item_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cinv_pack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/char_item_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_item_name" />

    <TextView
        android:id="@+id/char_item_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cinv_quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_item_desc" />

    <TextView
        android:id="@+id/char_item_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cinv_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_item_qty" />

    <TextView
        android:id="@+id/char_item_qual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cinv_quality"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_item_weight" />

    <TextView
        android:id="@+id/char_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cinv_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_item_qual" />

    <TextView
        android:id="@+id/char_item_dmg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cinv_damage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_item_price" />

    <LinearLayout
        android:id="@+id/char_item_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/char_item_equip"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>