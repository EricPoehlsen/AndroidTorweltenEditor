<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/dialog_item_dmg_code"
        app:layout_constraintBottom_toBottomOf="@+id/dia_itemdmg_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="@+id/dia_itemdmg_s"
        app:layout_constraintStart_toEndOf="@+id/dia_itemdmg_s"
        app:layout_constraintTop_toTopOf="@+id/dia_itemdmg_s" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="@+id/dia_itemdmg_d"
        app:layout_constraintStart_toEndOf="@+id/dia_itemdmg_d"
        app:layout_constraintTop_toTopOf="@+id/dia_itemdmg_d" />

    <EditText
        android:id="@+id/dia_itemdmg_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:hint="1"
        android:inputType="numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dia_itemdmg_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:hint="0"
        android:inputType="numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/dia_itemdmg_s" />

    <EditText
        android:id="@+id/dia_itemdmg_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:hint="E"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/dia_itemdmg_d" />

    <CheckBox
        android:id="@+id/dia_itemdmg_mod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_item_dmg_mod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dia_itemdmg_s" />

</androidx.constraintlayout.widget.ConstraintLayout>