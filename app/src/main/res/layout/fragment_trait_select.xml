<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/traitselect_outer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TraitSelectFragment">

    <Button
        android:id="@+id/traitselect_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ts_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/traitselect_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/traitselect_toggle">

        <LinearLayout
            android:id="@+id/traitselect_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:divider="@drawable/divider_4dp"
            android:orientation="vertical" />
    </ScrollView>

    <EditText
        android:id="@+id/traitselect_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="@string/te_name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/traitselect_toggle"
        app:layout_constraintEnd_toStartOf="@+id/traitselect_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>